#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Ejecutando validaciones pre-commit..."

# 0. Detectar merge conflicts (CRÃTICO)
echo "ğŸš¨ Detectando merge conflicts..."
node scripts/merge-conflict-detector.js
if [ $? -ne 0 ]; then
  echo "âŒ COMMIT BLOQUEADO: Merge conflicts detectados"
  echo "ğŸ’¡ Ejecuta: node scripts/merge-conflict-detector.js --auto-fix"
  exit 1
fi

# 1. Validar integridad de nombres
echo "ğŸ“ Validando convenciones de nombres..."
node scripts/naming-validator.js
if [ $? -ne 0 ]; then
  echo "âŒ COMMIT BLOQUEADO: Problemas de convenciones de nombres"
  exit 1
fi

# 2. Validar build
echo "ğŸ”¨ Validando integridad del build..."
node scripts/build-validator.js
if [ $? -ne 0 ]; then
  echo "âŒ COMMIT BLOQUEADO: Problemas de integridad del build"
  exit 1
fi

# 3. Ejecutar linter
echo "ğŸ§¹ Ejecutando ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ COMMIT BLOQUEADO: Errores de ESLint"
  exit 1
fi

# 4. Ejecutar tests
echo "ğŸ§ª Ejecutando tests..."
npm run test
if [ $? -ne 0 ]; then
  echo "âŒ COMMIT BLOQUEADO: Tests fallando"
  exit 1
fi

echo "âœ… Todas las validaciones pasaron. Commit permitido."

